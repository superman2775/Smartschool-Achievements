{
  "manifest_version": 3,
  "name": "Smartschool Achievements",
  "version": "1.0",
  "description": "Voeg achievements toe aan Smartschool.",
  "background": {
    "service_worker": "achievements-scripts/assignment-finish.js"
  },
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://*.smartschool.be/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.smartschool.be/*"],
      "exclude_matches": ["*://*.smartschool.be/login"],
      "js": [
        "achievements-scripts/hunderd-percent.js",
        "achievements-scripts/buis.js",
        "main-files/main.js"
      ],
      "run_at": "document_start"
    }
  ]
}